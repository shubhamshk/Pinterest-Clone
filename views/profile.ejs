<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pinterest Clone</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/profile.css">
  </head>
  <body>
    <div class="profile-container">
      <div class="profile-picture"></div>
      <div class="profile-name"><%= user.username %></div>
      <div class="username"><%= user.fullname %></div>
      <div class="website">
          <a href="https://booksguru.blogspot.com" id="cco">website</a>
          <p>We provide amazing picture of the internet.</p>
      </div>
      <div class="actions">
          <div class="follow">1 following</div>
          <a href="/logout" class="button">Log Out</a>
          <div class="edit-profile">Edit profile</div>
      </div>
      <div class="file-upload">
        <form action="/upload" method="post" enctype="multipart/form-data">
          <input type="file" name="file">
          <input type="text" name="filecaption" placeholder="somecaption">
          <button type="submit">Upload</button>
        </form>
      </div>
      
  </div>

  <div class="post-container">
    <div class="cards flex">
      <% user.posts.forEach(function(post){%>
        <div class="card" style="width: 18rem;">
          <img src="/images/uploads/<%= post.image %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><center><%= post.postText%></center></h5>
          </div>
          
        </div>
        <% }) %>
    </div>
   
  </div>
  
  </body>
</html>